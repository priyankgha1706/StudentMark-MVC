                     regex: "please enter the valid mark"
                }, English: {
                    required: "this field is required",
                    minlength: "Please Enter Atleast 1 character",
                    regex: "please enter the valid mark"
                }, Maths: {
                    required: "this field is required",
                   minlength: "Please Enter Atleast 1 character",
                   regex: "please enter the valid mark"
                }, Science: {
                    required: "this field is required",
                    minlength: "Please Enter Atleast 1 character",
                    regex: "please enter the valid mark"
                }, Social: {
                    required: "this field is required",
                    minlength: "Please Enter Atleast 1 character",
                    regex: "please enter the valid mark"
                }
            }      
    });
</script>
