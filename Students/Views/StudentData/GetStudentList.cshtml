@model IEnumerable<Students.Models.StudentMarks>
@{
    ViewBag.Title = "GetStudentList";
}

<h2>GetStudentList</h2>

@{
    ViewBag.Title = "List";
    int i = 1;

}
<style>
    .table {
        width: 100%;
        table-layout: fixed;
        background-color:azure

    }
    th {
        width: 100%;
        table-layout: fixed;
        background-color:indianred;
    }
    body {
        background: -webkit-linear-gradient(left, #25c481, #25b7c4);
        background: linear-gradient(to right, #6de8f3, #f383cf);
        font-family: 'Roboto', sans-serif;
    }


    tr {
        padding: 20px 15px;
        text-align: left;
        font-weight: 500;
        font-size: 12px;
        color: darkcyan;
        text-transform: uppercase;
    }

      
    body{
  font-family: 'lato', sans-serif;
       }


</style>
